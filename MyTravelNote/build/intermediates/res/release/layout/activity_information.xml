<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >
    <!-- 현제 위치를 표시해 주는 안내문 -->
    <TextView
        android:id="@+id/information_point_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#a1deff"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="@string/information_point" />
	<!-- ScrollView -->
    <HorizontalScrollView
        android:id="@+id/Button_horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information_point_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >
        <LinearLayout
            android:id="@+id/Button_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <!-- Buuton -->
            <Button
                android:id="@+id/foodzoon"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/in_food"
                android:background="#ffffff"
                android:text="@string/information_foodzoon" /><!-- 식당 버튼 -->
            <Button
                android:id="@+id/bank"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/in_bank"
                android:background="#ffffff"
                android:text="@string/information_bank" /><!-- 은행 버튼 -->
            <Button
                android:id="@+id/hospital"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/in_hospital"
                android:background="#ffffff"
                android:text="@string/information_hospital" /><!-- 병원 버튼 -->
             <Button
                android:id="@+id/convenience"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/in_store"
                android:background="#ffffff"
                android:text="@string/information_convenience" /><!-- 편의점 버튼 -->
             <Button
                android:id="@+id/lodging"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/in_lodging"
                android:background="#ffffff"
                android:text="@string/information_lodging" /><!-- 숙소 버튼 -->
             <Button
                android:id="@+id/oil"
                style="@style/AppBaseTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableTop="@drawable/in_oil"
                android:background="#ffffff"
                android:text="@string/information_oil" /><!-- 주유소 버튼 -->   
        </LinearLayout>
    </HorizontalScrollView>
	<!-- ListView -->
    <ListView
        android:id="@+id/information_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Button_horizontalScrollView" >
    </ListView>

</RelativeLayout><!-- From: file:/C:/Users/Mari/Project/MyTravelNote/res/layout/activity_information.xml -->